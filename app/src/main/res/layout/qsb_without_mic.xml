<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/qsb_button_height"
    android:layout_gravity="start|center"
    android:background="@drawable/bg_qsb_pill"
    android:contentDescription="@string/label_search"
    android:elevation="@dimen/qsb_button_elevation"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/g_icon"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:scaleType="center"
        android:src="@drawable/ic_super_g_color" />
</LinearLayout>