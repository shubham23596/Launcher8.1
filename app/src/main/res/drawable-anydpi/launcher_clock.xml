<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/launcher_clock_base" />
    <item>
        <rotate android:drawable="@drawable/launcher_clock_hour" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" />
    </item>
    <item>
        <rotate android:drawable="@drawable/launcher_clock_minute" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" />
    </item>
    <item>
        <rotate android:drawable="@drawable/launcher_clock_second" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" android:level="300" />
    </item>
    <item android:drawable="@drawable/launcher_clock_top" />
</layer-list>